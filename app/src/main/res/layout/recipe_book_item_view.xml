<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/recipe_book_image_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
               android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/recipe_book_title"
                android:text="test Title Recipe Book"
                android:textStyle="bold"
              android:paddingTop="50dp"
                android:paddingLeft="50dp"
                android:layout_alignRight="@id/recipe_book_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                android:layout_marginEnd="164dp" android:layout_marginRight="-147dp"
                android:layout_toEndOf="@+id/recipe_book_image_view" android:layout_marginStart="1dp"/>

    </RelativeLayout>

</LinearLayout>